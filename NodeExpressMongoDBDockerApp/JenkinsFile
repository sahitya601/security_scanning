pipeline {
    agent any
    environment {
        PROJECT_ID = "burner-sahmudra"
        REPO_NAME = "lloydsapp"
        IMAGE_NAME = "my-app"
        IMAGE_TAG = "latest"
        FULL_IMAGE_PATH = "us-central1-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/${IMAGE_NAME}:${IMAGE_TAG}"
        DOCKER_CREDENTIALS_ID = "secure_scan" // Use the new credentials
    }
    stages {
        stage('Pull Container Image') {
            steps {
                script {
                    // Switch to bash shell if required
                    sh '''
                    echo "Pulling Docker image from Artifact Registry..."
                    echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin https://us-central1-docker.pkg.dev
                    docker pull ${FULL_IMAGE_PATH}
                    '''
                }
            }
        }
    }
}
